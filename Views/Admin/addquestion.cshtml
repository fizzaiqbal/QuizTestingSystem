@model QuizTestingSystem.Models.question
@{
    Layout = "~/Views/Shared/forms_layout.cshtml";
}
@{
    ViewBag.Title = "Add Question";
}

@using (Html.BeginForm("AddQuestion", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Question</h4>
        <hr />
        <input type="hidden" value=@ViewBag.CourseId name="course"/>
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.question1, new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.EditorFor(model => model.question1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.question1)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.alpha, new { @class = "control-label col-md-2" })
            <div class="row">
                <div class="col-xs-2">
                    @Html.EditorFor(model => model.alpha, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.alpha)
                </div>
                <div class="col-xs-2">
                    @Html.EditorFor(model => model.beta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.beta)
                </div>
                <div class="col-xs-2">
                    @Html.EditorFor(model => model.charlie, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.charlie)
                </div>
                <div class="col-xs-2">
                    @Html.EditorFor(model => model.delta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.delta)
                </div>
            </div>
         </div>
            <div class="form-group">
                @Html.LabelFor(model => model.correctAnswer, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="form-control" id="role" name="role">
                        <option>Alpha</option>
                        <option>Bravo</option>
                        <option>Charlie</option>
                        <option>Delta</option>
                    </select>
                </div>
             </div>
        <div class="form-group">
            @Html.LabelFor(model => model.marks, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.marks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.marks)
            </div>
        </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Courses")
</div>

