<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>E-Quiz</title>
    <meta name="keywords">

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans|Candal|Alegreya+Sans">
    <link rel="stylesheet" type="text/css" href="~/Content/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstra.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/imagehover.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">
    
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/holder.min.js"></script>
    <script src="~/Scripts/ie10-viewport-bug-workaround.js"></script>
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    @Html.Raw(TempData["invalid"])
    @Html.Raw(TempData["forgetPassword"])
    @Html.Raw(TempData["noRecord"])
    @Html.Raw(TempData["EmailSent"])
    <!--loader--->
    <style type="text/css">
        .loader {
            position: fixed;
            left: 0px;
            top: 0px;
            width: 100%;
            height: 100%;
            z-index: 9999;
            background: url('http://bestanimations.com/Science/Gears/loadinggears/gear-animation-green.gif') 50% 50% no-repeat rgb(249,249,249);
        }
    .inner-addon {
  position: relative;
  /* margin just for breathe from viewport */
  margin-top: 20px;
}

input {
  /* give text some indent so it doesn't collapse with icon */
  text-indent: 18px;
}

.glyphicon.glyphicon-user {
  position: absolute;
  /* Adjust coordinates as desired */
  top: 10px;
  left: 10px;
}
#cont{
    background: url('https://az616578.vo.msecnd.net/files/2016/04/04/635953958066151937448157681_1408385286-chandler-bing-dating-advice-14.gif') no-repeat;
    width: 500px;
    height: 800px;
}
    </style>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
    <script>
        //paste this code under head tag or in a seperate js file.
        // Wait for window load
        $(window).load(function () {
            // Animate loader off screen
            $(".loader").fadeOut("slow");
        });
    </script>
</head>
<body>
    <div class="loader"></div>
    <!--Navigation bar-->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">E<span>-Quiz</span></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#feature">Features</a></li>
                    <li><a href="#courses">Courses</a></li>
                    <li><a href="#pricing">Pricing</a></li>
                    <li><a href="#faculity-member">About</a></li>
                    <li><a href="#contact">Contact Us</a></li>
                    <li><a href="#" data-target="#login" data-toggle="modal">Sign in</a></li>
                    <li class="btn-trial"><a href="#footer">Free Trial</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!--/ Navigation bar-->
    <!--Modal box-->
    <div class="modal fade" id="login" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content no 1-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-center form-title">Login</h4>
                </div>
                <div class="modal-body padtrbl">

                    <div class="login-box-body">
                        <p class="login-box-msg">Sign in to start your session</p>
                        <div class="form-group">
                            @using (Html.BeginForm("RedirectToAccount", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group has-feedback">
                                    <!----- username -------------->
                                    <div class="inner-addon left-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                        <input class="form-control" placeholder="Username" name="uname" type="text" required />
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <!----- password -------------->
                                    <div class="inner-addon left-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                        <input class="form-control" placeholder="Password" name="psw" type="password" required />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="checkbox icheck">
                                            <label>
                                              
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-xs-12">
                                        @Html.ActionLink("Forgot Password", "ForgetPassword", "Home")


                                        <button type="submit" class="btn btn-green btn-block btn-flat">Sign In</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ Modal box-->
    <div class="modal fade" id="myModal9" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content no 1-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-center form-title">Forgot Password</h4>
                </div>
                <div class="modal-body padtrbl">

                    <div class="login-box-body">
                        <p class="login-box-msg">To recover your account enter username</p>
                        <div class="form-group">
                            @using (Html.BeginForm("ForgetPass", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group has-feedback">
                                    <!----- username -------------->
                                    <div class="inner-addon left-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                        <input class="form-control" placeholder="Username" name="uname" type="text" required />
                                    </div>
                                </div>
                                <div class="row">
                                   
                                    <div class="col-xs-12">
                                        <button type="submit" class="btn btn-green btn-block btn-flat">Recover</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ Modal box-->
    <!--modal-->
    <div class="modal fade" id="myModal7" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content no 1-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body padtrbl">

                    <div class="login-box-body">
                        <p class="login-box-msg">Invalid login Credentials</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!---modal-->
    <!--modal-->
    <div class="modal fade" id="myModal10" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content no 1-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body padtrbl">

                    <div class="login-box-body">
                        <p class="login-box-msg">No Record Found</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!---modal-->
    <!--modal-->
    <div class="modal fade" id="myModal11" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content no 1-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body padtrbl">

                    <div class="login-box-body">
                        <p class="login-box-msg">Your new password is sent to your email account</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!---modal-->
    <!--Banner-->
    <div class="banner">
        <div class="bg-color">
            <div class="container">
                <div class="row">
                    <div class="banner-text text-center">
                        <div class="text-border">
                            <h2 class="text-dec">Trust & Quality</h2>
                        </div>
                        <div class="intro-para text-center quote">
                            <p class="big-text">Learning Today . . . Leading Tomorrow.</p>
                            <p class="small-text"></p>
                            <a href="#footer" class="btn get-quote">Sign Up</a>
                        </div>
                        <a href="#feature" class="mouse-hover"><div class="mouse"></div></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody();
    <!--Footer-->
